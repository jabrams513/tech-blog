<main>
  <div class="card">
    <h3 class="card-header">New Post</h3>
    <form class="card-body" id="add-post-form">
      <div class="form-floating mb-3">
        <label for="post-title" class="form-label">Title</label>
        <input type="text" id="post-title" name="post-title" class="form-input w-100" autofocus="true" placeholder="Title" />
      </div>

      <div class="form-floating mb-3">
        <label class="form-label" for="content">Content</label>
        <textarea id="content" name="content" class="form-input w-100" aria-label="Content" style="height: 300px" autofocus="true" placeholder="What's on your mind?"></textarea>
      </div>

      <button type="submit" class="w-100 btn btn-lg mb-3 text-light" style="background-color:#211572;">Create Post</button>
    </form>
  </div>
</main>

<script src="/js/addPost.js"></script>
